@model VarsityManagement.ViewModels.StudentCreateViewModel

<div class="container">
    <form method="post" asp-action="Create" asp-controller="Home">
        <div class="form-group row">
            <label asp-for="StudentName" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="StudentName" placeholder="Name" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label  class="col-md-2">Courses
            </label>
            <div class="col-md-10">
                @{
                    int i = 0;
                    foreach (var course in Model.courseList)
                    {
                                <div>

                                    <input asp-for="@Model.SelectedCourse[i].CourseId" type="hidden" value="@course.Value" />
                                    <input asp-for="@Model.SelectedCourse[i].isSelect" />
                                    <label asp-for="@Model.SelectedCourse[i].isSelect">
                                        @course.Text
                                    </label>
                                </div>
                        i++;
                    }
                    }
            </div>
        </div>
        <div class="form-group row col-md-2">
            <button type="submit" class="btn btn-outline-success">Create</button>
        </div>
    </form>
</div>